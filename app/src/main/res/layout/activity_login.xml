        <EditText
            android:id="@+id/cusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ConraseÃ±a" />

        <EditText
            android:id="@+id/cpassword"
